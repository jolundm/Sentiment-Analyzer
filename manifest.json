{
    "manifest_version": 2,
    "name": "Sentiment Analyzer",
    "description": "Select any text on the web and get instant semantic feedback from Google's Machine Learning API.",
    "version": "1.11",
    "icons": {
        "16": "NeutralFace16.png",
        "32": "NeutralFace32.png",
        "48": "NeutralFace48.png",
        "128": "NeutralFace128.png"
    },
    "author": [
        {
            "name": "Jonathan Lundmark"
        },
        {
            "name": "Fifi Johansson"
        },
        {
            "name": "David Eriksson"
        },
        {
            "name": "Filip Byren"
        }
    ],
    "browser_action": {
        "default_icon": "NeutralFace32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "http://www.google.com/",
        "https://language.googleapis.com/"
    ]
}
